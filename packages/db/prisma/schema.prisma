generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  firstName String    
  lastName  String    
  number    String    @unique
  password  String
  createdAt DateTime @default(now())
}

model Merchant {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String 
  auth_type AuthType
  createdAt DateTime @default(now())
}

model Otp {
  id      String       @id @default(cuid())
  otp     String    
  email   String    @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

enum AuthType {
  Google
  Github
}